generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Professor {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(255)
  email String @db.VarChar(255)
  senha String @db.VarChar(255)
  Turma Turma[]
}

model Turma {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(255)
  idProfessor Int
  professorId Professor @relation(fields: [idProfessor], references: [id])
  atividades Atividade[] // Relacionamento com Atividade
}

model Atividade {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(255)
  turmaId Int // Campo para o relacionamento
  turma Turma @relation(fields: [turmaId], references: [id]) // Relacionamento com Turma
}
